{
   "compilerOptions": {
      "target": "ES6",
      "module": "CommonJS",
      "outDir": "./preDist",
      "strict": true,
      "esModuleInterop": true,
      "typeRoots": ["./node_modules/@types", "src/domain.types.ts"],
      "declaration": true,
      "sourceMap": true,
      "inlineSources": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "baseUrl": ".",
      "paths": {
         "~/*": ["./*"]
      }
   },
   "types": ["node"],
   "include": ["src/**/*.ts", "./src"]
}
