{
   "compilerOptions": {
      "target": "ESNext",
      "module": "CommonJS",
      "outDir": "./preDist",
      "strict": true,
      "esModuleInterop": true,
      "typeRoots": ["./node_modules/@types", "./types"],
      "declaration": true,
      "sourceMap": true,
      "inlineSources": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "skipLibCheck": true,
      "baseUrl": ".",
      "paths": {
         "~shared/*": ["../shared/*"],
         "~/*": ["./*"]
      }
   },
   "types": ["node"],
   "include": ["src/**/*.ts", "./src"],
   "exclude": [
      "node_modules",
      "dist",
      "build",
      "**/*.spec.ts",
      "**/*.spec.tsx",
      "**/*.test.ts",
      "**/*.test.tsx",
      "**/__tests__",
      "**/__tests__/**/*",
      "**/test/**/*.ts",
      "**/test/**/*.tsx"
   ]
}
