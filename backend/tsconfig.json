{
   "compilerOptions": {
      "target": "es2024",
      "module": "CommonJS",
      "outDir": "./preDist",
      "strict": true,
      "esModuleInterop": true,
      "typeRoots": ["./node_modules/@types", "./types"],
      "declaration": true,
      "sourceMap": true,
      "inlineSources": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "baseUrl": ".",
      "paths": {
         "@shared/*": ["../shared/*"],
         "@/*": ["./*"]
      }
   },
   "types": ["node"],
   "include": ["src/**/*.ts", "./src"],
   "exclude": ["__test__/**/*"]
}
