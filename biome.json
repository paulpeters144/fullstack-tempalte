{
   "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
   "vcs": {
      "enabled": false,
      "clientKind": "git",
      "useIgnoreFile": false
   },
   "files": {
      "ignoreUnknown": true,
      "include": ["*/**"],
      "ignore": [
         "cdk.out/*",
         "*.css",
         "api/client.g.ts",
         "build/*",
         "dist/*",
         "postcss.config.js",
         "tailwind.config.js",
         ".react-router",
         ".vscode/*"
      ]
   },
   "formatter": {
      "enabled": true,
      "indentStyle": "space",
      "indentWidth": 3,
      "lineWidth": 85
   },
   "json": {
      "formatter": {
         "enabled": true
      }
   },
   "organizeImports": {
      "enabled": true
   },
   "linter": {
      "enabled": true,
      "rules": {
         "recommended": true,
         "complexity": {
            "noForEach": "off"
         },
         "suspicious": {
            "noConsoleLog": {
               "level": "warn",
               "fix": "none"
            },
            "noEmptyInterface": {
               "level": "warn",
               "fix": "none"
            }
         },
         "correctness": {
            "noUnusedVariables": {
               "level": "warn",
               "fix": "none"
            },
            "useExhaustiveDependencies": {
               "level": "off",
               "options": {}
            },
            "noUnusedImports": {
               "fix": "safe",
               "level": "warn"
            },
            "noEmptyPattern": "off"
         },
         "style": {
            "useExportType": {
               "level": "warn",
               "fix": "safe"
            },
            "useConst": {
               "level": "warn",
               "fix": "safe"
            }
         },
         "a11y": {
            "useKeyWithClickEvents": "off",
            "useButtonType": "off",
            "useValidAnchor": "off"
         }
      }
   },
   "javascript": {
      "formatter": {
         "quoteStyle": "double"
      }
   }
}
